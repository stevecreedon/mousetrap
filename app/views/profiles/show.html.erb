<h1>Profile</h1>

<%= link_to "back to users", users_path %>

<div><%= @profile.name %></div>
<div><%= raw RedCloth.new(ProfanityFilter::Base.clean(@profile.description)).to_html %></div>
<div><%= image_tag @profile.photo.url(:medium) %></div>

<div><%= link_to "edit profile", edit_user_profile_path(@profile.user) %></div>

<h2>Comments</h2>

<% @profile.comments.each do |comment| %>
	<%= render :partial => 'comments/show', :locals => {:comment => comment} %>
<% end %>

<%= render :partial => "comments/new", :locals => {:comment => Comment.new } %>